<UserControl
    x:Class="MyTaskManager.Views.UsuariosView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:vm="clr-namespace:MyTaskManager.ViewModels">


    <Grid Margin="20">
        <DataGrid
            Margin="20"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding Usuarios}"
            SelectedItem="{Binding UsuarioSeleccionado}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="50"
                    Binding="{Binding Id}"
                    Header="ID" />
                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding Nombre}"
                    Header="Nombre" />
                <DataGridTextColumn
                    Width="250"
                    Binding="{Binding Email}"
                    Header="Email" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

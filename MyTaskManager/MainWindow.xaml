<Window
    x:Class="MyTaskManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:MyTaskManager.Views"
    Title="MyTaskManager"
    Width="800"
    Height="450"
    WindowState="Maximized"
    mc:Ignorable="d">

    <materialDesign:DrawerHost IsLeftDrawerOpen="True">
        <!--  Drawer (menú lateral)  -->
        <materialDesign:DrawerHost.LeftDrawerContent>
            <StackPanel Width="220" Background="#2c3e50">
                <TextBlock
                    Margin="16,16,16,32"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="MyTaskManager" />
                <Button
                    Margin="10"
                    Command="{Binding AbrirTareasCommand}"
                    Content="🏷️ Tareas"
                    Foreground="White"
                    Style="{StaticResource MaterialDesignFlatButton}" />
                <Button
                    Margin="10"
                    Command="{Binding AbrirCategoriasCommand}"
                    Content="📁 Categorías"
                    Foreground="White"
                    Style="{StaticResource MaterialDesignFlatButton}" />
                <Button
                    Margin="10"
                    Command="{Binding AbrirUsuariosCommand}"
                    Content="👥 Usuarios"
                    Foreground="White"
                    Style="{StaticResource MaterialDesignFlatButton}" />
            </StackPanel>
        </materialDesign:DrawerHost.LeftDrawerContent>

        <!--  Contenido principal  -->
        <Grid Background="{DynamicResource MaterialDesignPaper}">
            <ContentControl Content="{Binding VistaActual}" />
        </Grid>
    </materialDesign:DrawerHost>
</Window>